// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workouts     Workout[]
  workoutLogs  WorkoutLog[]
  customExercises Exercise[]
  programs     Program[]
}

model Exercise {
  id          String   @id @default(cuid())
  name        String
  category    String
  muscleGroup String
  equipment   String?
  isArchived  Boolean  @default(false)
  
  // Hierarchical grouping
  parentId    String?
  parent      Exercise? @relation("Variations", fields: [parentId], references: [id])
  variations  Exercise[] @relation("Variations")
  
  // Custom exercises linked to a user
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  
  // Relation to log entries
  logEntries  WorkoutLogEntry[]
  
  // Relation to workout templates
  workoutExercises WorkoutExercise[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isCoreLift  Boolean  @default(false)
  restTime    Int      @default(90)
}

model Workout {
  id        String   @id @default(cuid())
  name      String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  // A workout is a template. A log is an instance.
  logs      WorkoutLog[]
  
  // A workout template has a list of planned exercises
  exercises WorkoutExercise[]
  
  // A workout can be part of many programs
  programDays ProgramDay[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WorkoutExercise {
  id        String   @id @default(cuid())
  workoutId String
  workout   Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exerciseId String
  exercise   Exercise @relation(fields: [exerciseId], references: [id])
  order     Int      // The sequence of exercises in the workout
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WorkoutLog {
  id        String   @id @default(cuid())
  date      DateTime @default(now())
  duration  Int?     // in minutes
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  workoutId String?
  workout   Workout? @relation(fields: [workoutId], references: [id], onDelete: SetNull)

  // Optional link to a specific day in a program
  programDayId String?
  programDay   ProgramDay? @relation(fields: [programDayId], references: [id])
  
  // Normalization: Log contains entries
  entries   WorkoutLogEntry[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WorkoutLogEntry {
  id     String @id @default(cuid())
  
  workoutLogId String
  workoutLog   WorkoutLog @relation(fields: [workoutLogId], references: [id], onDelete: Cascade)
  
  exerciseId   String
  exercise     Exercise @relation(fields: [exerciseId], references: [id])
  
  sets         Set[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Set {
  id        String   @id @default(cuid())
  reps      Int
  weight    Float
  isDone    Boolean  @default(false)
  
  logEntryId String
  logEntry   WorkoutLogEntry @relation(fields: [logEntryId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Program {
  id          String   @id @default(cuid())
  name        String
  description String?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  isActive    Boolean  @default(false)
  
  days        ProgramDay[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProgramDay {
  id        String   @id @default(cuid())
  programId String
  program   Program  @relation(fields: [programId], references: [id], onDelete: Cascade)
  
  workoutId String?
  workout   Workout?  @relation(fields: [workoutId], references: [id], onDelete: SetNull)
  
  dayNumber Int      // Sequence of days
  
  logs      WorkoutLog[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}